@using System.Globalization
@model ShoppingCartVM

<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-secondary text- bg-gradient ml-0 py-3">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Order Summary
						</h5>
					</div>
					<div class="col-6 text-end text-reset">
						<a asp-action="Index" class="btn btn-outline-danger"><i class="bi bi-backspace"></i> Back to Cart</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-secondary">Shipping Details:</span>
								</h4>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.Name" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.Name" class="ms-2 text-muted">Name</label>
								<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.PhoneNumber" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.PhoneNumber" class="ms-2 text-muted">Phone Number</label>
								<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.StreetAdress" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.StreetAdress" class="ms-2 text-muted">Street Adress</label>
								<span asp-validation-for="OrderHeader.StreetAdress" class="text-danger"></span>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.City" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.City" class="ms-2 text-muted">City</label>
								<span asp-validation-for="OrderHeader.City" class="text-danger"></span>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.State" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.State" class="ms-2 text-muted">State</label>
								<span asp-validation-for="OrderHeader.State" class="text-danger"></span>
							</div>
							<div class="form-floating mb-3 col-md-12">
								<input asp-for="OrderHeader.PostalCode" class="form-control" placeholder="name@example.com" />
								<label asp-for="OrderHeader.PostalCode" class="ms-2 text-muted">Postal Code</label>
								<span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-secondary">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var details in Model.ShoppingCartList)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@details.Product.Title</h6>
											<small class="text-muted">Quantity: @details.Count</small>
										</div>
										<span class="text-muted">
											@((details.Price * details.Count).ToString("c",
																					CultureInfo.CreateSpecificCulture("en")))
										</span>
									</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-info">
									<small class="text-secondary">Total (USD)</small>
									<strong class="text-secondary">
										@Model.OrderHeader.OrderTotal.ToString("c",
																						CultureInfo.CreateSpecificCulture("en"))
									</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p class="text-danger-emphasis">
							Estimate Arrival Date:
							@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>