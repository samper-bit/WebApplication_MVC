@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-body text-success">
				<i class="bi bi-journal-plus"></i> Create New Category
			</a>
		</div>
	</div>
</div>
<hr />
<table class="table table-hover">
	<thead>
	<tr>
		<th class="text-warning">
			Category Name
		</th>
		<th class="text-warning">
			Display Order
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr class="table-dark">
				<td class="text-info">
					@obj.Name
				</td>
				<td class="text-info">
					@obj.DisplayOrder
				</td>
				<td>
					<div class="width text-end" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-warning mx-2">
							<i class="bi bi-pencil pe-1"></i> Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>