@model List<Product>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Product List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-body text-success">
				<i class="bi bi-journal-plus"></i> Create New Product
			</a>
		</div>
	</div>
</div>
<hr />
<table class="table table-hover">
	<thead>
		<tr>
			<th class="text-warning">Product Title</th>
			<th class="text-warning">Product Code</th>
			<th class="text-warning">Producer</th>
			<th class="text-warning">Description</th>
			<th class="text-warning">List Price</th>
			<th class="text-warning">Price</th>
			<th class="text-warning">Price5</th>
			<th class="text-warning">Price20</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u => u.ProductCode))
		{
			<tr class="table-dark">
				<td class="text-info">@obj.Title</td>
				<td class="text-info">@obj.ProductCode</td>
				<td class="text-info">@obj.Producer</td>
				<td class="col-1 text-info">@obj.Description</td>
				<td class="text-info">@obj.ListPrice</td>
				<td class="text-info">@obj.Price</td>
				<td class="text-info">@obj.Price5</td>
				<td class="text-info">@obj.Price20</td>
				<td>
					<div class="width text-end" role="group">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" class="btn btn-warning mx-2">
							<i class="bi bi-pencil pe-1"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>