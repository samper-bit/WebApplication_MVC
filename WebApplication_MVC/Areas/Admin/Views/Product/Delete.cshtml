@model WebApp.Models.Product

<form method="post">
	<input asp-for="ProductId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<div class="col-6">
				<h2 class="text-primary">
					Delete Product
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Index" class="btn text-danger">
					<i class="bi bi-x-circle"></i> Back to List
				</a>
			</div>
			<hr />
		</div>
		<div class="mb-3 row">
			<label asp-for="Title" class="text-warning mb-1 p-0"></label>
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3 row">
			<label asp-for="ProductCode" class="text-warning mb-1 p-0"></label>
			<input asp-for="ProductCode" disabled class="form-control" />
		</div>
		<div class="mb-3 row">
			<label asp-for="Producer" class="text-warning mb-1 p-0"></label>
			<input asp-for="Producer" disabled class="form-control" />
		</div>
		<div class="mb-3 row col-12">
			<label asp-for="Description" class=" text-warning mb-1 p-0"></label>
			<textarea class="form-control" disabled asp-for="Description" class="form-control"></textarea>
		</div>
		<div class="mb-3 row">
			<label asp-for="ListPrice" class="text-warning mb-1 p-0"></label>
			<input asp-for="ListPrice" disabled class="form-control" />
		</div>
		<div class="mb-3 row">
			<label asp-for="Price" class="text-warning mb-1 p-0"></label>
			<input asp-for="Price" disabled class="form-control" />
		</div>
		<div class="mb-3 row">
			<label asp-for="Price5" class="text-warning mb-1 p-0"></label>
			<input asp-for="Price5" disabled class="form-control" />
		</div>
		<div class="mb-3 row">
			<label asp-for="Price20" class="text-warning mb-1 p-0"></label>
			<input asp-for="Price20" disabled class="form-control" />
		</div>

		<button type="submit" class="btn btn-lg text-danger p-0 m-0">
			<i class="bi bi-trash"></i> Delete category
		</button>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}