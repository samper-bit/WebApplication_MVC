@model Company

<form method="post" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<div class="col-6 mb-2">
				<h2 class="text-body-secondary">
					@(Model.Id != 0 ? "Update" : "Create") Company
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Company" asp-action="Index" class="btn btn-outline-warning fw-bold">
					<i class="bi bi-x-circle"></i> Back to List
				</a>
			</div>
			<hr />
		</div>
		<div class="row" >
			<div class="col-10">
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="Name" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Name" class="ms-2 text-muted"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="StreetAddress" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="StreetAddress" class="ms-2 text-muted"></label>
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="City" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="City" class="ms-2 text-muted"></label>
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="State" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="State" class="ms-2 text-muted"></label>
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="PostalCode" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="PostalCode" class="ms-2 text-muted"></label>
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12 row shadow">
					<input asp-for="PhoneNumber" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="PhoneNumber" class="ms-2 text-muted"></label>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				@if (Model.Id != 0)
				{
					<button type="submit" class="btn btn-lg text-success fw-bold row ps-1">
						<i class="bi bi-plus-circle pe-1"></i> Update company
					</button>
				}
				else
				{
					<button type="submit" class="btn btn-lg btn-outline-success fw-bold row ps-1">
						<i class="bi bi-plus-circle pe-1"></i> Create company
					</button>
				}
			</div>
		</div>

	</div>
</form>

@section Scripts {
	<script>
		tinymce.init({
			selector: 'textarea',
			plugins: 'ai tinycomments mentions anchor autolink charmap codesample emoticons lists table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
			toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | tinycomments | checklist numlist bullist indent outdent',
			tinycomments_mode: 'embedded',
			tinycomments_author: 'Author name',
			content_css: 'dark',
			mergetags_list: [
				{ value: 'First.Name', title: 'First Name' },
				{ value: 'Email', title: 'Email' },
			],
			ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
		});
	</script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}